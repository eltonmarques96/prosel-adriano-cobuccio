{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../",
  "modulePaths": ["<rootDir>"],
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/src/$1",
    "^@users/(.*)$": "<rootDir>/src/users/$1",
    "^@app/(.*)$": "<rootDir>/src/app/$1",
    "^@config/(.*)$": "<rootDir>/src/config/$1"
  },
  "coverageDirectory": "../coverage"
}
